# Database
POSTGRES_USER=kanbot
POSTGRES_PASSWORD=kanbot_secret
POSTGRES_DB=kanbot

# Backend Environment
# SECURITY WARNING: Set to "production" in production environments
# In production: OpenAPI docs disabled, HSTS enabled, CSP headers enabled
ENVIRONMENT=development

# SECURITY WARNING: Generate a strong secret key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-in-production

# CORS Origins - comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Admin Account (seeded on first startup)
# SECURITY WARNING: Change these credentials immediately after deployment
ADMIN_EMAIL=admin@kanbot.local
ADMIN_PASSWORD=AdminPass123!

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google Calendar Integration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
